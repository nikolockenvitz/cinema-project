<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="kinosystemdatawarehouse" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<mapping-file>META-INF/orm.xml</mapping-file>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Actor</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Category</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Customer</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Employee</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Genre</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Hall</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Movie</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Rating</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Reservation</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Seat</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Show</class>
		<class>com.fallstudie.kinobuchungssystem.data.entity.Ticket</class>
		<properties>
			<!--  <property name="javax.persistence.nonJtaDataSource" value="java:comp/env/kinosystemDS"/> -->
		  	<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/kinosystem"/> 
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="123456"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/> 
		    <property name="eclipselink.logging.level" value="INFO"/> 
		    <property name="eclipselink.query-results-cache" value="false"/>
		    <property name="eclipselink.refresh" value="true"/>
			<property name="eclipselink.target-database" value="org.eclipse.persistence.platform.database.PostgreSQLPlatform"/>
		    <property name="eclipselink.cache.shared.default" value="false"/>
			<property name="eclipselink.ddl-generation" value="create-or-extend-tables" />
		</properties>
	</persistence-unit>
</persistence>
